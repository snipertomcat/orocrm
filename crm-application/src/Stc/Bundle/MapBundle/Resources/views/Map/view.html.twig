{% block content_data %}

    {% set mapInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'contentClasses': [],
            'url': path('stc_map_info', {id: entity.id}),
            'title': 'Map Information'|trans
        }) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [mapInformationWidget] }
            ]
        }
    ] %}

    {% set id = 'mapView' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
